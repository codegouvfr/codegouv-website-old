---
layout: layouts/base.njk
---

{% include "breadcrumb.njk" %}

<h1>{{ title }}</h1>

<div class="fr-grid-row fr-grid-row--gutters fr-grid-row--top">
  <div class="fr-col-12 fr-col-md-12">
    {%- if date %}
      <p><time class="fr-tag" datetime="{{ date | htmlDateString }}">Publi√© le {{ date | readableDate }}</time></p>
    {% endif %}

    {{ content | safe }}
  </div>

{%- if link or image or linkImage %}
  <div class="fr-col-12 fr-col-md-4">
    <div class="fr-card fr-enlarge-link">
	    {%- if link %}
      <div class="fr-card__body">
        <div class="fr-card__content">
          <h2 class="fr-card__title">
            <a href="{{ link }}" class="fr-card__link">{{ linkTitle }}</a>
          </h2>
        </div>
      </div>
	    {% endif %}

	    {%- if image or linkImage %}
	    <div class="fr-card__header">
        <div class="fr-card__img">
          <img src="{{ image or linkImage }}" alt="">
        </div>
      </div>
	    {% endif %}
	  </div>
  </div>
  {% endif %}
</div>
